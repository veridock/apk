{
  "name": "svg-php-launcher",
  "version": "1.0.0",
  "description": "Launch SVG+PHP files as native applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "svg",
    "php",
    "launcher",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.yourcompany.svgphplauncher",
    "productName": "SVG+PHP Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "welcome.html",
      "env-editor.html",
      "assets/**/*",
      "!node_modules/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "php",
        "to": "php",
        "filter": ["**/*"]
      }
    ],
    "fileAssociations": [
      {
        "ext": "svg",
        "name": "SVG+PHP Application",
        "description": "SVG with embedded PHP",
        "icon": "assets/svg-icon",
        "role": "Editor"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "mimeTypes": ["image/svg+xml"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "include": "installer.nsh"
    }
  }
}